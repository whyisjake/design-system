{
  "name": "@cagov/ds-icons",
  "version": "0.0.1",
  "description": "A utility component for mangaging CA State Template v5.6.1 icons in the Design System.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "run-s build:get-font build:split-svg build:sprite-all",
    "build:get-font": "wget https://california.azureedge.net/cdt/statetemplate/5.6.1/fonts/CaGov.svg -N --directory-prefix=fonts",
    "build:split-svg": "font-blast fonts/CaGov.svg dist",
    "build:sprite-all": "svg-sprite-generate -d dist/svg -o dist/allicons.svg",
    "demo": "node scripts/generate-demo.js ",
    "sprite": "node scripts/sprite.js --i=$npm_config_ids",
    "all": "run-s build demo && cd ../../ && npm run site:build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cagov/design-system/tree/main/components/icons"
  },
  "devDependencies": {
    "file-get-contents": "^1.0.0",
    "font-blast": "^0.7.0",
    "glob": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "svg-sprite-generator": "^0.0.7",
    "yargs": "^17.3.1"
  }
}
