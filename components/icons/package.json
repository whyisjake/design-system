{
  "name": "@cagov/ds-icons",
  "version": "0.0.1",
  "description": "A utility component for mangaging CA State Template v5.6.1 icons in the Design System.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "run-s get-font split-svg sprite-all",
    "get-font": "wget https://california.azureedge.net/cdt/statetemplate/5.6.1/fonts/CaGov.svg --directory-prefix=src/original",
    "split-svg": "font-blast src/original/CaGov.svg dist",
    "sprite-all": "svg-sprite-generate -d dist/svg -o dist/allicons.svg",
    "sprite": "node scripts/sprite.js --ids=accessible arrow"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cagov/design-system/tree/main/components/icons"
  },
  "devDependencies": {
    "font-blast": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "svg-sprite-generator": "^0.0.7",
    "yargs": "^17.3.1"
  }
}
